{
  "compilerOptions": {
    "target": "es6",
    "lib": ["ESNext", "dom", "dom.iterable"],
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "declarationDir": "./dist/types"
  },
  "include": ["./src/**/*"]
}
